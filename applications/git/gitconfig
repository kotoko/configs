[core]
	editor = /usr/bin/env vim

[push]
	default = simple
	autoSetupRemote = true

[pull]
	ff = only

[alias]
	br = branch
	ci = commit
	co = checkout
	diffc = diff --cached
	hist = log --oneline
	last = log -1 HEAD
	st = status
	sw = switch
	puhs = push
	praise = blame

[filter "tabs-to-spaces"]
	clean = /usr/bin/env expand --initial --tabs=4
	smudge = /usr/bin/env unexpand --first-only --tabs=4

#[includeIf "gitdir:~/Projects/company1/"]
#	path = .gitconfig-company1
